                </div>
                <div class="flex items-center gap-2">
                    <Phone />
                    <p>+54 9 3804-828899</p>
                </div>

            </div>
            <ul class="flex items-center gap-5">
                <a href="/" class="hover:scale-125 transition">
                    <Instagram />
                </a>
                <a href="/" class="hover:scale-125 transition">
                    <Facebook />
                </a>
                <a href="/" class="hover:scale-125 transition">
                    <Linkedin />
                </a>
                <a href="/" class="hover:scale-125 transition">
                    <Web />
                </a>
