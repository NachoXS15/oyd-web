---
import { Image } from "astro:assets";
import logo from '../assets/logo_header.png'
---

<header id="header" class="w-full h-24 py-4 fixed flex items-center justify-around text-white transition" style="font-family: Montserrat, sans-serif">
    <nav class="flex items-center gap-10">
        <a href="" class="font-bold hover:scale-110 transition">SERVICIOS</a>
        <a href="" class="font-bold hover:scale-110 transition">NOSOTROS</a>
    </nav>
    <a href="/"><Image src={logo} width={200} alt="logo" /></a>
    <nav class="flex items-center gap-10">
        <a href="" class="font-bold hover:scale-110 transition">CLIENTES</a>
        <a href="" class="font-bold hover:scale-110 transition">CONTACTO</a>
    </nav>
</header>
<script>
    window.addEventListener('scroll', () => {
        const header = document.getElementById('header');
        if (window.scrollY > 50) {
            header?.classList.add('bg-orange-400');
            header?.classList.add('bg-orange-400');
        }else{
            header?.classList.remove('bg-orange-400');
            header?.classList.add('bg-none');
        }
    })
</script>
