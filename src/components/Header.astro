---
import { Image } from "astro:assets";
import logo from '../assets/logo_header.png'
---
<nav id="header" class="w-full h-20 py-12 px-10 md:px-0 flex justify-between md:justify-around items-center bg-semi-black text-white fixed transition">
    <div aria-hidden class="hidden md:block">
        <a class="font-bold" href="/skills" style="margin-right: 20px;">SERVICIOS</a>
        <a class="font-bold" href="/estudios">NOSOTROS</a>
    </div>
    <a href="/"><Image src={logo} alt="logo" width={200} /></a>
    <div aria-hidden class="hidden md:block">
        <a class="font-bold" href="/project" style="margin-right: 20px;">CLIENTES</a>
        <a class="font-bold" href="/">CONTACTO</a>
    </div>
    <button id="menu-button"
      data-collapse-toggle="navbar-sticky"
      data-nav-toggle="#navbar-sticky"
      class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
      aria-controls="navbar-sticky"
      aria-expanded="false"
    >
      <span class="sr-only">Open main menu</span>
      <svg
        class="w-5 h-5"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 17 14"
      >
        <path
          stroke="white"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 1h15M1 7h15M1 13h15"></path>
      </svg>
    </button>
</nav>
<div class="hidden md:hidden bg-darkblue py-6 w-full bg-semi-black absolute top-20 z-50 transition"  id="menu-open">
    <div class="w-full bg-semi-black bg-opacity-20 h-fit z-50">
        <nav class="w-full flex flex-col gap-4 p-5 font-bold">
            <a class="font-bold text-white" href="" style="margin-right: 20px;">SERVICIOS</a>
            <a class="font-bold text-white" href="">NOSOTROS</a>
            <a class="font-bold text-white" href="/project">CLIENTES</a>
            <a class="font-bold text-white" href="/">CONTACTO</a>
        </nav>
    </div>
</div>
<script>
    window.addEventListener('scroll', () => {
        const header = document.getElementById('header');
        if (window.scrollY > 50) {
            header?.classList.add('bg-orange-400');
            header?.classList.add('bg-orange-400');
        }else{
            header?.classList.remove('bg-orange-400');
            header?.classList.add('bg-none');
        }
    })

    const button = document.querySelector('#menu-button') as Element;
    const menuOpen = document.querySelector("#menu-open") as Element;

    button?.addEventListener("click", () => {
        menuOpen.classList.toggle("hidden");
    });
</script>