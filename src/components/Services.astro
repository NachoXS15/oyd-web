---
import servicesData from "../config/ServicesData";
---
<section class="w-full h-fit flex flex-col items-center bg-orange-100">
    <div class="w-12 h-3 mb-5 mt-40 text-center border-2 rounded-full bg-orangeMain"></div>
    <div class="w-full h-fit flex flex-col items-center">
        <h2 class="text-5xl font-bold text-center text-darkblue">NUESTROS SERVICIOS</h2>
        <div class="w-full mt-10 px-14 md:px-20 flex flex-col items-start justify-center flex-wrap gap-5 md:flex-row">
            {
                servicesData.map(service => (
                    <article class="w-full h-fit md:m-2 bg-semi-black pb-4 md:w-5/12 flex flex-col gap-4 rounded-lg">
                        <div class="w-full h-[300px] rounded-2xl bg-cover bg-center" style={`background-image: url(${service.bg})`}></div>
                        <div class="flex flex-col gap-3">
                            <h2 class="font-bold text-3xl uppercase">{service.title}</h2>
                            <ul>
                                {
                                    service.info.map(info => (
                                        <li class="flex items-center gap-2">
                                            <div class="marker w-3 h-3 bg-orangeSec"></div>
                                            <span class="">{info}</span>
                                        </li>
                                    ))
                                }
                            </ul>
                        </div>
                    </article>
                ))
            }
        </div>
    </div>
    <div class="w-12 h-3 mb-5 mt-20 text-center border-2 rounded-full bg-orangeMain"></div>
</section>

<style>
    .marker{
        clip-path: polygon(50% 0%, 0% 100%, 100% 100%);
        color: orangered;
    }
</style>